<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_large"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/margin_medium"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_large">

            <TextView
                android:id="@+id/general_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:contentDescription="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large"
                tools:text="@string/app_name" />

            <EditText
                android:id="@+id/search_view"
                android:layout_width="@dimen/container_xlarge"
                android:layout_height="@dimen/container_medium"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium_large"
                android:background="@drawable/btn_search"
                android:gravity="center"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="@dimen/container_small"
                android:layout_height="@dimen/container_small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search_bright_24px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>