<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.redroom.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/general_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@android:color/black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/general_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/general_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_container"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_red_room"
            style="@style/MenuImages"
            android:src="@drawable/ic_share_black_24px" />

        <ImageView
            android:id="@+id/menu_browse"
            style="@style/MenuImages"
            android:src="@drawable/ic_library_books_black_24px" />

        <ImageView
            android:id="@+id/menu_collection"
            style="@style/MenuImages"
            android:src="@drawable/ic_collections_bookmark_black_24px" />

        <ImageView
            android:id="@+id/menu_borrow"
            style="@style/MenuImages"
            android:src="@drawable/ic_book_black_24px" />
    </LinearLayout>

</LinearLayout>
